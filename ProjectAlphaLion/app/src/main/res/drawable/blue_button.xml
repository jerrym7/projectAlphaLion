<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#283593" />
            <gradient android:angle="-90" android:startColor="#1A237E" android:endColor="#1565C0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3949AB" />
            <solid android:color="#303F9F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#283593" />
            <gradient android:angle="-90" android:startColor="#64B5F6" android:endColor="#303F9F" />
        </shape>
    </item>
</selector>